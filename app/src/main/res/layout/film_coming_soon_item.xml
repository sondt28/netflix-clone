<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivFilmImage"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="192dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_coming_soon_film_one" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_bell"
            android:drawablePadding="6dp"
            android:padding="20dp"
            android:text="Remind Me"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_share"
            android:drawablePadding="6dp"
            android:padding="20dp"
            android:text="Share"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Season 1 Coming December 14"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvFilmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Tiny Pretty Things"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/tell_friend_text"
        android:textColor="@color/white" />

    <LinearLayout

        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steamy"/>

        <View
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/border_circle_ava"
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <TextView
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soapy"/>

        <View
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/border_circle_ava"
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <TextView
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slow Burn"/>

        <View
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/border_circle_ava"
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <TextView
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suspenseful"/>

        <View
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/border_circle_ava"
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <TextView
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teen"/>

    </LinearLayout>
</LinearLayout>